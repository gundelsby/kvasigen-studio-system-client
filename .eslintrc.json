{
  "env": {
    "browser": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-console": "off",
    "no-unused-vars": ["error", { "ignoreRestSiblings": true }],
    "sort-imports": [
      "warn",
      {
        "ignoreCase": true,
        "memberSyntaxSortOrder": ["none", "all", "multiple", "single"]
      }
    ]
  },
  "overrides": [
    {
      "files": ["*-test.js"],
      "env": {
        "mocha": true
      }
    }
  ]
}
